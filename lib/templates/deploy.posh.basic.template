# Deployment
# ----------

echo "Handling Basic Web Site deployment."

# 1. KuduSync
if ($env:IN_PLACE_DEPLOYMENT -ne "1") {

  if ($env:IGNORE_MANIFEST -eq "1") {
    $env:IGNORE_MANIFEST='-x'
  }
  
  & $KUDU_SYNC_CMD -v 50 $env:IGNORE_MANIFEST -f "$DEPLOYMENT_SOURCE" -t "$DEPLOYMENT_TARGET" -n "$NEXT_MANIFEST_PATH" -p "$PREVIOUS_MANIFEST_PATH" -i ".git;.hg;.deployment;deploy.ps1"
  exitWithMessageOnError "Kudu Sync failed"
}

